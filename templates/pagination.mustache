{{!
    @template local_oer/pagination

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * Various data about mappings

    Example context (json):
    {
        "selectoptions": [
          {
            "value": "4",
            "selected": true
          }
        ],
        "control": false,
        "previous": false,
        "next": false,
        "pages": false,
        "filecount": "1",
        "filemax": "100"
    }
  }}

<div class="container">
    <div class="row justify-content-md-center">
        <div>
            <label for="local-oer-pagination-select">{{#str}} amount, local_oer {{/str}}:</label>
            <select class="custom-select" name="amount" id="local-oer-pagination-select">
                {{#selectoptions}}
                    <option value="{{value}}"{{#selected}} selected{{/selected}}>{{value}}</option>
                {{/selectoptions}}
            </select>
        </div>
        <div>
            <ul class="pagination" id="local-oer-pagination-pages">
                {{#control}}
                    <li class="page-item{{^previous}} disabled{{/previous}}"{{^previous}} disabled{{/previous}} data-page="previous">
                        <a class="page-link" href="#" data-page="previous" aria-label="Previous" {{^previous}} disabled{{/previous}}>
                            <span aria-hidden="true" data-page="previous" {{^previous}} disabled{{/previous}}>&laquo;</span>
                            <span class="sr-only" data-page="previous" {{^previous}} disabled{{/previous}}>Previous</span>
                        </a>
                    </li>
                {{/control}}
                {{#pages}}
                    <li class="page-item {{#disabled}} disabled{{/disabled}}{{#active}} active{{/active}}" data-page="{{page}}">
                        <a class="page-link" href="#" data-page="{{page}}" {{#disabled}} disabled{{/disabled}}>{{page}}</a>
                    </li>
                {{/pages}}
                {{#control}}
                    <li class="page-item {{^next}} disabled{{/next}}" {{^next}} disabled{{/next}} data-page="next">
                        <a class="page-link" href="#" data-page="next" aria-label="Next" {{^next}} disabled{{/next}}>
                            <span aria-hidden="true" data-page="next" {{^next}} disabled{{/next}}>&raquo;</span>
                            <span class="sr-only" data-page="next" {{^next}} disabled{{/next}}>Next</span>
                        </a>
                    </li>
                {{/control}}
            </ul>
        </div>
        <div>
            <div class="badge badge-light ml-3 mt-1">{{filecount}}/{{filemax}} {{#str}} filecount, local_oer {{/str}}
                <a class="nav-link p-0 m-0" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="icon fa fa-info-circle fa-fw p-0 m-0" style="pointer-events:none"></i>
                </a>
                <div class="dropdown-menu">
                    <small>{{#str}} filecount_info, local_oer{{/str}}</small>
                </div>
            </div>
        </div>
    </div>
</div>