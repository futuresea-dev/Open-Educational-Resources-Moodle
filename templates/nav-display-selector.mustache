{{!
    @template local_oer/nav-display-selector

    Taken from block_myoverview.
    This template renders display dropdown.

    Example context (json):
    {
        "cards": true,
        "list": false,
        "summary": false
    }
}}

<div id="files-view-{{uniqid}}" class="dropdown mb-1">
    <button id="local_oer_displaydropdown" type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
            aria-label="{{#str}} aria:displaydropdown, block_myoverview {{/str}}">
        {{#pix}} a/view_icon_active {{/pix}}
        <span class="d-sm-inline-block" data-active-item-text>
            {{#card}}{{#str}} card, local_oer {{/str}}{{/card}}
            {{#list}}{{#str}} list, local_oer {{/str}}{{/list}}
        </span>
    </button>
    <ul id="local_oer-select-layout" class="dropdown-menu" role="menu" data-show-active-item data-skip-active-class="true" aria-labelledby="local_oer_displaydropdown">
        <li>
            <a class="dropdown-item" href="#" data-display-option="display" data-value="card" aria-label="Select card view"
               aria-controls="files-view-{{uniqid}}" role="menuitem" {{#card}}aria-current="true"{{/card}}>
                {{#str}} card, local_oer {{/str}}
            </a>
        </li>
        <li>
            <a class="dropdown-item" href="#" data-display-option="display" data-value="list" aria-label="Select list view"
               aria-controls="files-view-{{uniqid}}" role="menuitem" {{#list}}aria-current="true"{{/list}}>
                {{#str}} list, local_oer {{/str}}
            </a>
        </li>
    </ul>
</div>
