{{!
    @template local_oer/notwritable

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * Various data about mappings

    Example context (json):
    {
    }
  }}

<h3>{{header}}</h3>
{{#str}} reason, local_oer {{/str}}:
<div class="alert alert-{{alert}}">{{{reason}}}</div>
{{#multiple}}
    <p>{{#str}} courses {{/str}}:{{> local_oer/multiplecourses}}</p>
{{/multiple}}
{{#showmetadata}}
    <p>
        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            {{#str}} showmetadata, local_oer {{/str}}
        </button>
    </p>
    <div class="collapse" id="collapseExample">
        <div class="card card-body">
            <div class="container">
                {{#metadata.simple}}
                    <div class="row">
                        <div class="col-sm-2">
                            {{name}}
                        </div>
                        <div class="col-sm">
                            {{#collapse}}
                                {{{heading}}}<span class="collapse" id="local_oer_{{uniqid}}">{{{body}}}</span>
                                <a data-toggle="collapse" href="#local_oer_{{uniqid}}" role="button" aria-expanded="false"
                                   aria-controls="local_oer_{{uniqid}}"> &raquo; </a>
                            {{/collapse}}
                            {{^collapse}}
                                {{value}}
                            {{/collapse}}
                        </div>
                    </div>
                    <hr>
                {{/metadata.simple}}
                {{#metadata.tags}}
                    <div class="row">
                        <div class="col-sm-2">
                            {{#str}} tags {{/str}}
                        </div>
                        <div class="col-sm">
                            {{#metadata.taglist}}
                                <span class="badge badge-info">{{value}}</span>
                            {{/metadata.taglist}}
                        </div>
                    </div>
                    <hr>
                {{/metadata.tags}}
                {{#metadata.persons}}
                    <div class="row">
                        <div class="col-sm-2">
                            {{#str}} person, local_oer {{/str}}
                        </div>
                        <div class="col-sm">
                            {{#metadata.personlist}}
                                <span class="badge badge-info">{{role}}: {{firstname}} {{lastname}}</span>
                            {{/metadata.personlist}}
                        </div>
                    </div>
                    <hr>
                {{/metadata.persons}}
                {{#metadata.classification}}
                    {{#metadata.classificationlist}}
                        <div class="row">
                            <div class="col-sm-2">
                                <a href="{{url}}" target="_blank">{{type}}</a>
                            </div>
                            <div class="col-sm">
                                {{#values}}
                                    <span class="badge badge-info">{{name}}</span>
                                {{/values}}
                            </div>
                        </div>
                    {{/metadata.classificationlist}}
                    <hr>
                {{/metadata.classification}}
            </div>
        </div>
    </div>
{{/showmetadata}}
<br>
<p>{{{support}}}</p>
