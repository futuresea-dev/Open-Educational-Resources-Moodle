{{#isadmin}}
    <form action="{{releaseurl}}" method="POST">
        <input type="submit" class="btn btn-outline-primary" name="create_snapshots" value="Create snapshots now"/>
    </form>
{{/isadmin}}
<table class="flexible generaltable generalbox">
    <tr>
        <th>{{#str}} course {{/str}}</th>
        <th>{{#str}} files {{/str}}</th>
    </tr>
    {{#courses}}
        <tr>
            <td class="text-left"><a href="{{url}}">{{course}}</a></td>
            <td class="text-left">{{files}}</td>
        </tr>
    {{/courses}}
</table>
